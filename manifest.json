{
  "manifest_version": 3,
  "name": "Focals - LinkedIn Pipeline",
  "version": "1.1.2",
  "description": "Scrape et suivi des profils LinkedIn depuis l'extension Focals.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://api.my-saas.com/*",
    "https://ppawceknsedxaejpeylu.supabase.co/*",
    "https://*.lovable.app/*",
    "https://*.lovableproject.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://*.lovable.app/*",
      "https://*.lovableproject.com/*",
      "https://ppawceknsedxaejpeylu.supabase.co/*"
    ]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.lovable.app/*"
      ],
      "js": ["session-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": ["content-main.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": ["content-messaging.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
