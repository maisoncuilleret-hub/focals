{
  "manifest_version": 3,
  "name": "Focals - LinkedIn Assistant",
  "version": "1.1.4",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "unlimitedStorage",
    "downloads",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://ppawceknsedxaejpeylu.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content-main.js"]
    }
  ]
}
