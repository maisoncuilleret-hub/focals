{
  "manifest_version": 3,
  "name": "Focals - LinkedIn Assistant",
  "version": "1.1.3",
  "description": "Scrape et suivi des profils LinkedIn depuis l'extension Focals.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "scripting",
    "tabs",
    "storage",
    "downloads",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://ppawceknsedxaejpeylu.supabase.co/*",
    "https://*.lovable.app/*",
    "https://*.lovableproject.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.lovable.app/*",
      "https://*.lovableproject.com/*",
      "http://localhost:*/*",
      "https://localhost:*/*"
    ]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "src/content/linkedinSduiScraper.js",
        "src/content-main.js",
        "content-messaging.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "src/content/linkedinVoyagerInterceptor.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/linkedinSduiScraper.js",
        "src/content/linkedinVoyagerInterceptor.js",
        "src/utils/logger.js",
        "src/scrape/ScrapeController.js",
        "src/scrape/domObservers.js",
        "src/api/config.js"
      ],
      "matches": ["*://www.linkedin.com/*"]
    }
  ]
}
