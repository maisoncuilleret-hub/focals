{
  "manifest_version": 3,
  "name": "Focals â€” Profil LinkedIn",
  "version": "1.0.0",
  "description": "Scrape profil LinkedIn (page /in/ ou Recruiter/Recruiter Lite) et copie JSON.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://ppawceknsedxaejpeylu.supabase.co/*",
    "https://*.lovable.app/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost:*/*",
      "*://*.lovable.app/*",
      "*://*.lovableproject.com/*",
      "https://ppawceknsedxaejpeylu.supabase.co/*"
    ]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.lovable.app/*"],
      "js": ["session-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.linkedin.com/in/*",
        "https://www.linkedin.com/talent/*",
        "https://www.linkedin.com/recruiter/*"
      ],
      "js": ["content-main.js"],
      "run_at": "document_idle"
    }
  ]
}
